@page
@model HomNayAnGiApp.Pages.UsersPage.UpdatePassModel
@{
}
<div class="row g-5 mt-3">
    <div class="col-lg-3"></div>
    <div class="col-lg-6">
        <div class="border-start border-5 border-primary ps-5 mb-5" style="max-width: 600px;">
            <h1 class="text-uppercase mb-0">Đổi Mật Khẩu</h1>
        </div>
        <form method="post" onsubmit="return validatePassword()">
            <div class="row g-3">
                <div class="col-12">
                    <label>Mật khẩu cũ</label>
                    <input type="password" id="oldpass" name="oldpass" class="form-control bg-light border-0 px-4" style="height: 55px;" required>
                </div>
                <div class="col-12">
                    <label>Mật khẩu mới </label>
                    <input type="password" id="pass1" name="pass1" class="form-control bg-light border-0 px-4" style="height: 55px;" required>
                </div>
                <div class="col-12">
                    <label>Nhập lại mật khẩu mới</label>
                    <input type="password" id="pass2" name="pass2" class="form-control bg-light border-0 px-4" style="height: 55px;" required>
                </div>
                <div class="col-12">
                    <button class="btn btn-primary w-100 py-3 text-white" type="submit">ĐỔI MẬT KHẨU</button>
                </div>
            </div>
        </form>

    </div>
    <div class="col-lg-3"></div>
</div>

<script>
    function validatePassword() {
        const pass1 = document.getElementById('pass1').value;
        const pass2 = document.getElementById('pass2').value;

        if (pass1 !== pass2) {
            alert('Mật khẩu mới không khớp. Vui lòng kiểm tra lại.');
            return false;
        }
        return true;
    }
</script>