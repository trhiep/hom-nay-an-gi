    <!-- Toast Success Container -->
    <input type="hidden" id="toastSuccessMessage" value="@ViewBag.SuccessMessage">
    <div class="toast-container position-absolute end-0 p-3" style="z-index: 11; bottom: 78%">
        <!-- Toast -->
        <div class="toast" role="alert" aria-live="assertive" aria-atomic="true" id="successToast">
            <div class="toast-header" style="background-color: #20c997">
                <strong class="mr-auto" style="color: white">THÀNH CÔNG</strong>
            </div>
            <div class="toast-body">
                <span id="toastSuccessMessageContent" style="font-size: 16px"></span>
            </div>
        </div>
    </div>

    <!-- Toast Error Container -->
    <input type="hidden" id="toastErrorMessage" value="@ViewBag.ErrorMessage">
    <div class="toast-container position-absolute end-0 p-3" style="z-index: 11; bottom: 80%">
        <!-- Toast -->
        <div class="toast" role="alert" aria-live="assertive" aria-atomic="true" id="errorToast">
            <div class="toast-header" style="background-color: #DC3545">
                <strong class="mr-auto" style="color: white">ĐÃ CÓ LỖI XẢY RA</strong>
            </div>
            <div class="toast-body">
                <span id="toastErrorMessageContent" style="font-size: 16px"></span>
            </div>
        </div>
    </div>

    <!-- JavaScript Libraries -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
