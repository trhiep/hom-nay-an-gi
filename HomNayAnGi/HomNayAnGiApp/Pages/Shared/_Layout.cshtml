    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/easing/easing.min.js"></script>
    <script src="~/lib/waypoints/waypoints.min.js"></script>
    <link href="~/lib/lightbox/css/lightbox.min.css" rel="stylesheet" />
    <script src="~/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@fancyapps/ui/dist/fancybox.umd.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- Template Javascript -->
    <script src="~/js/main.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            let toastSuccessMessage = document.getElementById("toastSuccessMessage");
            let toastSuccessMessageContent = document.getElementById("toastSuccessMessageContent");

            // Kiểm tra xem input hidden có nội dung không
            if (toastSuccessMessage && toastSuccessMessage.value) {
                // Hiển thị nội dung của toast
                toastSuccessMessageContent.innerText = toastSuccessMessage.value;

                // Hiển thị toast
                var successToast = new bootstrap.Toast(document.getElementById('successToast'));
                successToast.show();
            }
        });
    </script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            let toastErrorMessage = document.getElementById("toastErrorMessage");
            let toastErrorMessageContent = document.getElementById("toastErrorMessageContent");

            // Kiểm tra xem input hidden có nội dung không
            if (toastErrorMessage && toastErrorMessage.value) {
                // Hiển thị nội dung của toast
                toastErrorMessageContent.innerText = toastErrorMessage.value;

                // Hiển thị toast
                var errorToast = new bootstrap.Toast(document.getElementById('errorToast'));
                errorToast.show();
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
