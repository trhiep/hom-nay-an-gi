@page
@model HomNayAnGiApp.Pages.RecipeIngredients.CreateModel

@{
    ViewData["Title"] = "Create";
}
<head>

    <!-- Tuan Anh css-->
    <link href="~/css/tuananh.css" rel="stylesheet" />
</head>

<div class="container my-5">
    <h1 class="text-center">Thêm Nguyên Liệu Mới</h1>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="form-group mb-4">
                    <label asp-for="Ingredient.IngredientName" class="form-label fw-bold">Tên Nguyên Liệu</label>
                    <input asp-for="Ingredient.IngredientName" class="form-control" placeholder="Nhập tên nguyên liệu" />
                    <span asp-validation-for="Ingredient.IngredientName" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Ingredient.Description" class="form-label fw-bold">Mô Tả</label>
                    <textarea asp-for="Ingredient.Description" class="form-control" rows="3" placeholder="Nhập mô tả cho nguyên liệu"></textarea>
                    <span asp-validation-for="Ingredient.Description" class="text-danger"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">Thêm Mới</button>
                </div>
            </form>

            <div class="text-center mt-4">
                <a asp-page="Index" class="btn btn-link">Quay lại danh sách</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
