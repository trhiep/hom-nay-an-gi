@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!-- Hero Start -->
<div class="container-fluid py-5 mb-5 hero-header" style="margin-top: -20px !important">
    <div class="container py-5">
        <div class="row g-5 align-items-center justify-content-center">
            @if (Model.RandomRecipe != null)
            {
                <div class="col-12 d-flex justify-content-center">
                    <div id="recipeCarousel" class="carousel slide" data-bs-ride="carousel" style="max-width: 700px; width: 100%;">
                        <!-- Indicators -->
                        <div class="carousel-indicators">
                            @for (int i = 0; i < Model.RandomRecipe.Count; i++)
                            {
                                <button type="button" data-bs-target="#recipeCarousel" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")" aria-current="true" aria-label="Slide @(i + 1)"></button>
                            }
                        </div>

                        <!-- Carousel items -->
                        <div class="carousel-inner">
                            @foreach (var recipe in Model.RandomRecipe)
                            {
                                <div class="carousel-item @(Model.RandomRecipe.IndexOf(recipe) == 0 ? "active" : "")">
                                    <div class="card" style="width: 100%; padding: 10px;">
                                        <img style="height: 400px; width: 100%;" src="@recipe.Image" alt="Bữa cơm nhà" class="card-image">
                                        <div class="card-content p-4">
                                            <h3 class="card-title">@recipe.RecipeName</h3>
                                            <p class="card-description">
                                                @recipe.Description
                                            </p>
                                            <div class="card-info">
                                                <span><i class="bi bi-clock"></i> @recipe.PrepTime phút</span> • <span><i class="bi bi-people"></i> @recipe.Servings người</span> •
                                                <span><i class="bi bi-book pt-5"></i> @recipe.CategoryName</span>
                                            </div>
                                            <div class="card-author">
                                                <i class="bi bi-person-fill" style="font-size: 23px; color: black!important;"></i>
                                                <span> @recipe.UserName </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>

                        <!-- Controls -->
                        <button class="carousel-control-prev" type="button" data-bs-target="#recipeCarousel" data-bs-slide="prev" style="left: -30px;">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#recipeCarousel" data-bs-slide="next" style="right: -30px;">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                </div>
            }

            <div class="col-12 d-flex justify-content-center mt-3">
                <form style="max-width: 700px; width: 100%;">
                    <a href="/Recipes/List" type="submit" style="max-width=700px" class="btn btn-primary w-100">Xem tất cả công thức nấu ăn</a>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Hero End -->