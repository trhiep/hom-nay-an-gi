 @page
 @model HomNayAnGiApp.Pages.RecipeManage.ListModel

 @{
     ViewData["Title"] = "List";
 }
<body>

    <div class="container my-5">
        <div class="row mb-4">
            <div class="col-md-8">
                <div class="input-group align-items-center">
                    <input type="search" id="searchInput" class="form-control" placeholder="Tìm kiếm công thức..." oninput="filterRecipes()" />
                    <button class="btn btn-primary">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>
            <div class="col-md-4">
                <!-- Dropdown menu for Recipe Name -->
                <select class="form-control mb-2" id="recipeNameDropdown" onchange="filterRecipes()">
                    <option value="">Chọn kiểu tìm kiếm</option>
                
                </select>
              
            </div>
        </div>

        <div class="row" id="recipeList">
            @foreach (var item in Model.Recipe)
            {
                <div class="col-md-4 recipe-card">
                    <div class="card mb-4">
                        <img style="height:250px" src="@item.Image" alt="Bữa cơm nhà" class="card-img-top">
                        <div class="card-body">
                            <h5 class="card-title">@item.RecipeName</h5>
                            <p class="card-text">@item.Description</p>
                            <div class="card-info">
                                <span><i class="bi bi-clock"></i> @item.PrepTime phút</span> •
                                <span><i class="bi bi-people"></i> @item.Servings người</span>
                            </div>
                            <div class="card-author mt-3 d-flex align-items-center">
                                <img src="path/to/avatar.jpg" alt="Annie Vo" class="author-avatar mr-2 rounded-circle" style="width:30px; height:30px;">
                                <span>Annie Vo</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Bootstrap and jQuery scripts -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function filterRecipes() {
            var searchInput = document.getElementById("searchInput").value.toLowerCase();
            var selectedName = document.getElementById("recipeNameDropdown").value.toLowerCase();
            var selectedCategory = document.getElementById("recipeCategoryDropdown").value.toLowerCase();

            document.querySelectorAll(".recipe-card").forEach(function (card) {
                var name = card.getAttribute("data-name").toLowerCase();
                var category = card.getAttribute("data-category").toLowerCase();

                // Kiểm tra điều kiện lọc
                if ((name.includes(searchInput) || searchInput === "") &&
                    (name.includes(selectedName) || selectedName === "") &&
                    (category.includes(selectedCategory) || selectedCategory === "")) {
                    card.style.display = "block";
                } else {
                    card.style.display = "none";
                }
            });
        }
    </script>
</body>
}