 @page
 @model HomNayAnGiApp.Pages.RecipeManage.ListModel

 @{
     ViewData["Title"] = "List";
 }
<body>

    <div class="container my-5">
       
    <form method="get" class="mb-4">
        <div class="row">
            <div class="col-md-8">
                <div class="input-group">
                    <input type="text" name="SearchTerm" class="form-control" placeholder="Tìm kiếm công thức..." value="@Model.SearchTerm" />
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>
            <div class="col-md-4">
                <select name="SearchBy" class="form-control">
                        @if (@Model.SearchBy == "name")
                        {
                            <option value="name" selected>Tìm theo tên món</option>
                        }
                        else
                        {
                            <option value="name">Theo tên món</option>

                        }
                        @if(Model.SearchBy == "category")
                        {
                            <option value="category" selected>Theo loại món</option>
                        }
                        else
                        {
                            <option value="category">Theo loại món</option>
                        }
                    </select>
            </div>
        </div>
    </form>

        <div class="row" id="recipeList">
            @foreach (var item in Model.Recipe)
            {
                <div class="card">
                    <img style="height:250px" height="300" src="@Model.RandomRecipe.Image" alt="Bữa cơm nhà" class="card-image">
                    <div class="card-content">
                        <h3 class="card-title">Cả vườn hoa trong bữa cơm nhà</h3>
                        <p class="card-description">
                            @Model.RandomRecipe.Description
                        </p>
                        <div class="card-info">
                            <span><i class="bi bi-clock"></i> @Model.RandomRecipe.PrepTime phút</span> • <span><i class="bi bi-people"></i> @Model.RandomRecipe.Servings người</span>•
                            <span>   <i class="bi bi-book pt-5"></i> @Model.RandomRecipe.CategoryName</span>
                        </div>
                        @if (Model.UserByID != null)
                        {
                            <div class="card-author">
                                <i class="bi-person-fill" style="font-size: 23px; color: black;"></i>
                                <span> @Model.UserByID.Username </span>
                            </div>
                        }

                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Bootstrap and jQuery scripts -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      
</body>
