@page
@model HomNayAnGiApp.Pages.RecipeManage.ListModel

@{
    ViewData["Title"] = "List";
}
<body>

    <div class="container my-5">

        <form method="get" class="mb-4">
            <div class="row">
                <div class="col-md-8">
                    <div class="input-group">
                        <input type="text" name="SearchTerm" class="form-control" placeholder="Tìm kiếm công thức..." value="@Model.SearchTerm" />
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
                <div class="col-md-4">
                    <select name="SearchBy" class="form-control">
                        @if (@Model.SearchBy == "name")
                        {
                            <option value="name" selected>Tìm theo tên món</option>
                        }
                        else
                        {
                            <option value="name">Theo tên món</option>
                        }
                        @if (Model.SearchBy == "category")
                        {
                            <option value="category" selected>Theo loại món</option>
                        }
                        else
                        {
                            <option value="category">Theo loại món</option>
                        }
                    </select>
                </div>
            </div>
        </form>

        <div class="row" id="recipeList">
            @foreach (var item in Model.Recipe)
            {
                <div class="col-md-6 mb-4">
                    <a href="/Recipes/Details?id=@item.RecipeId" class="card h-100">
                        <img style="height: 250px; object-fit: cover; padding-top: 10px;" src="@item.Image" alt="Bữa cơm nhà" class="card-image">
                        <div class="card-body">
                            <h3 class="card-title">@item.RecipeName</h3>
                            <p class="card-description">
                                @item.Description
                            </p>
                            <div class="card-info">
                                <span><i class="bi bi-clock"></i> @item.PrepTime phút</span> • <span><i class="bi bi-people"></i> @item.Servings Người</span> •
                                <span> <i class="bi bi-book"></i> @item.CategoryName</span>
                            </div>
                            <div class="card-author">
                                <i class="bi bi-person-fill" style="font-size: 23px; color: black;"></i>
                                <span style="color: black;"> @item.UserName </span>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>

</body>

<style>
    #recipeList1 {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1.5rem;
    }

    .card {
        border: 1px solid #ddd;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: white;
        transition: transform 0.3s;
    }

        .card:hover {
            transform: translateY(-5px);
        }

    .card-body {
        padding: 1.5rem;
    }

    .card-title {
        font-size: 1.25rem;
        font-weight: bold;
        color: #333;
    }

    .card-description {
        font-size: 1rem;
        color: #666;
        margin: 10px 0;
    }

    .card-info {
        font-size: 0.875rem;
        color: #888;
    }

    .card-author {
        display: flex;
        align-items: center;
        font-size: 0.875rem;
        color: #444;
    }

        .card-author i {
            margin-right: 8px;
        }
</style>
